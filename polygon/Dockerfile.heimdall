ARG DOCKER_TAG

FROM 0xpolygon/heimdall:${DOCKER_TAG}

RUN apk update && apt-get add ca-certificates bash tzdata su-exec curl zstd pv aria2 coreutils

ARG USER=heimdall
ARG UID=10000

# See https://stackoverflow.com/a/55757473/12429735RUN
RUN adduser \
    --disabled-password \
    --gecos "" \
    --shell "/sbin/nologin" \
    --uid "${UID}" \
    "${USER}"

RUN mkdir -p /var/lib/heimdall/snapshots && chown -R ${USER}:${USER} /var/lib/heimdall

WORKDIR /var/lib/heimdall

COPY ./docker-entrypoint-heimdalld.sh /usr/local/bin/docker-entrypoint.sh

USER ${USER}

CMD [ "/bin/sh", "-c", "# (nop)" ]
